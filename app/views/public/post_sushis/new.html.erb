<div class = "container">
   <div class ="row my-5 d-flex justify-content-center">
　　<div class="form">
<%= form_with model: @post_sushi,url: public_post_sushis_path, method: :post do |f| %>
  <%= f.label :image, "画像" %><br>
  <%= f.file_field :image, accept: "image/*" %><br>


  <%= f.label :name, "店名" %><br>
  <%= f.text_field :name,placeholder: "すしろう" %><br>

  <%= f.label :region, "地方" %><br>
  <%= f.select :region, options_for_select(PostSushi.regions), {prompt: "選択してください"}, class: "prefecture-select" %><br>

  <%= f.label :prefecture, "都道府県" %><br>
  <%= f.select :prefecture, options_for_select(PostSushi.prefectures), {prompt: "選択してください"}, class: "prefecture-select" %><br>

  <%= f.label :municipalities, "市区町村" %><br>
  <%= f.text_field :municipalities, placeholder: "渋谷区"%><br>
  
  <%= f.label :lunch_dinner, "ランチorディナー" %><br>
  <%= f.select :lunch_dinner, options_for_select(PostSushi.lunch_dinners), {prompt: "選択してください"}, class: "prefecture-select" %><br>

  <%= f.label :price, "一人当たりの値段" %><br>
  <%= f.select :price, options_for_select(PostSushi.prices), {prompt: "選択してください"}, class: "prefecture-select" %><br>

  <%= f.label :atmosphere, "雰囲気" %><br>
  <%= f.select :atmosphere, options_for_select(PostSushi.atmospheres), {prompt: "選択してください"}, class: "prefecture-select" %><br>

　<%= f.label :name, "感想" %><br>
  <%= f.text_field :memo,placeholder: "感想" %><br>

  <%= f.submit '投稿' %>
<% end %>


    </div>
  </div>
</div>