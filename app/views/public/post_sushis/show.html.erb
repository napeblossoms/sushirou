<!--寿司投稿詳細-->
<div class="card" style="width: 30rem;">
  <%= image_tag @post_sushi.get_image %>
  <div class="card-body">
    <h5 class="card-title"><strong><%= @post_sushi.name %></strong></h5>
    <p class="card-text1"><%= @post_sushi.region %>地方</p>
    <p class="card-text2"><%= @post_sushi.prefecture %></p>
    <p class="card-text2"><%= @post_sushi.municipalities %></p>
    <p class="card-text2">一人あたりの値段：<%= @post_sushi.price %></p>
    <p class="card-text2">お店の雰囲気：<%= @post_sushi.atmosphere %></p>
    <p class="card-text2">感想：<%= @post_sushi.memo %></p>
     投稿者：<%= link_to public_end_user_path(@post_sushi.end_user_id) do %>
        <%= @post_sushi.end_user.name %>
     <% end %>
   <!-- <a href="#" class="btn btn-primary">Go somewhere</a>-->

 <!--コメント機能-->
 <!--コメント一覧-->
 <div class="post_comments_buttons_<%= @post_sushi.id %>">
   <%= render "public/post_comments/post_comments", post_sushi: @post_sushi %>
 </div>
 <!--コメントフォーム-->
 <div>
   <%= render "public/post_comments/form", post_sushi: @post_sushi, post_comment: @post_comment %>
 </div>


 <!--タベタイ機能-->
 <div class="favorites_buttons_<%= @post_sushi.id %>">
   <%= render "public/favorites/favorite", post_sushi: @post_sushi %>
 </div>

 <!--投稿の削除-->
    <% if @post_sushi.end_user == current_end_user %>
      <%= link_to "投稿を削除", public_post_sushi_path(@post_sushi), method: :delete %>
    <% end %>


  </div>
</div>

