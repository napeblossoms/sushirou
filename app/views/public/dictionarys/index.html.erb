<div class="container">
<div class="row">
  <div class="col-lg-2">
    <div>
    <%= form_with model: @dictionary do |f| %>
      <div class="dic">食べた季節
        <%= f.select :season, [["春", "春"], ["夏", "夏"], ["秋", "秋"], ["冬", "冬"]], include_blank: "選択して下さい" %>
      </div>

      <div class="div">ネタの名前
        <%= f.text_field :name %>
      </div>

      <div class="dic">メモ
        <%= f.text_area :body %>
      </div>

      <div class="dic">
        <%= f.submit '投稿' %>
      </div>
    <% end %>
    </div>
  </div>

    <div class="col-lg-10">
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>旬</th>
            <th>ネタ</th>
            <th>メモ</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
        <% @dictionarys.each do |dictionary| %>
      　  <tr>
      　    <td><%= dictionary.season %></td>
      　    <td>
      　      <%= link_to public_dictionary_path(dictionary.id) do %>
      　       <%= dictionary.name %>
      　      <% end %>
      　    </td>
      　    <td><%= dictionary.body %></td>
      　  </tr>
        </tbody>
      　<% end %>
      </table>
    </div>

  </div>