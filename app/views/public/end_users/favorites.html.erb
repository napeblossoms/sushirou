<!--タベタイ一覧-->
<section class="ex1">
　  <div class="sushi">タベタイスシ</div>
</section>
<div class="row mt-2">
  <% @favorite_post_sushis.each do |post_sushi| %>
  <div class="col-lg-3">
    <div class="card w-100 mb-4">
      <%= image_tag post_sushi.get_image, class: 'sushi-img' %>
      <div class="card-body">
        <h5 class="card-title text-center">
          <%= link_to public_post_sushi_path(post_sushi.id) do %>
            <strong><%= post_sushi.name %></strong>
          <% end %>
        </h5>
        <div class="place text-center">
          <h6 class= "title"><i class="fas fa-map-marker-alt"></i>場所</h6>
          <p class="card-text1"><%= post_sushi.region %>地方</p>
          <p class="card-text2"><%= post_sushi.prefecture %></p>
          <p class="card-text2"><%= post_sushi.municipalities %></p>
        </div>
        <div class="lunch text-center">
          <h6 class= "title"><i class="fas fa-utensils"></i>ランチorディナー</h6>
          <p class="card-text2"><%= post_sushi.lunch_dinner %></p>
        </div>
        <div class="price text-center">
          <h6 class= "title"><i class="fas fa-comment-dollar"></i>一人あたりの値段</h6>
          <p class="card-text2"><%= post_sushi.price %></p>
        </div>
        <div class="atmosphere text-center">
          <h6 class= "title"><i class="fas fa-bookmark"></i>お店の雰囲気</h6>
          <p class="card-text2"><%= post_sushi.atmosphere %></p>
        </div>
        <div class="memo text-center">
          <h6 class= "title"><i class="fas fa-book-open"></i>メモ</h6>
          <p class="card-text2"><%= post_sushi.memo %></p>
        </div>
        <div class= "user text-center">
          <p>by<%= image_tag post_sushi.end_user.get_profile_image, width: "20%",height: "20%",class:"mt-3 rounded-circle"; %>
             <%= post_sushi.end_user.name %>
          </p>
        </div>
      </div>
    </div>
    </div>
  <% end %>
</div>
