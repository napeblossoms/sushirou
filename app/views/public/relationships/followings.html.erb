<h2>Follower Users</h2>
<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% if @end_users.exists? %>
     <% @end_users.each do |end_user| %>
      <tr>
        <td><%= image_tag end_user.get_profile_image(50,50) %></td>
        <td><%= end_user.name %></td>
         <td>フォロー数: <%= end_user.followings.count %></td>
         <td>フォロワー数: <%= end_user.followers.count %></td>
         <td>
           <% if current_end_user != end_user %>
            <% if current_end_user.following?(end_user) %>
              <%= link_to "フォロー外す", public_end_user_relationships_path(end_user.id), method: :delete %>
            <% else %>
              <%= link_to "フォローする", public_end_user_relationships_path(end_user.id), method: :post %>
            <% end %>
           <% end %>
         </td>
      </tr>
  </tbody>
</table>
     <% end %>
    <% else %>
      <p>ユーザーはいません</p>
    <% end %>
